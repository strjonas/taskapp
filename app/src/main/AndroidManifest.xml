<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tasksapp">
    <!-- Include required permissions for Google Mobile Ads to run. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.taskapp.deletetask"
            android:parentActivityName="com.example.taskapp.ParentMainScreen"/>
        <activity android:name="com.example.taskapp.howdoesitwork" />
        <activity
            android:name="com.example.taskapp.whydoineedagroup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.taskapp.group_leaderboard"
            android:label="@string/title_activity_group_leaderboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.taskapp.NocurrentTaskKid" />
        <activity
            android:name="com.example.taskapp.currentTaskKid"
            android:parentActivityName="com.example.taskapp.KidMainScreen" />
        <activity
            android:name="com.example.taskapp.taskConfirmParents"
            android:parentActivityName="com.example.taskapp.ParentMainScreen" />
        <activity
            android:name="com.example.taskapp.taskAcceptKids"
            android:parentActivityName="com.example.taskapp.KidMainScreen" />
        <activity android:name="com.example.taskapp.MainActivity3" />
        <activity
            android:name="com.example.taskapp.viewProfile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.taskapp.MainActivity2" />
        <activity
            android:name="com.example.taskapp.joingroup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.taskapp.creategroup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.taskapp.makeorjoingroup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.taskapp.NewTask"
            android:parentActivityName="com.example.taskapp.ParentMainScreen"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.example.taskapp.showGroupScreen"
            android:parentActivityName="com.example.taskapp.KidMainScreen" />
        <activity
            android:name="com.example.taskapp.KidMainScreen"
            android:label="@string/title_activity_kid_main_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.taskapp.editGroupScreen"
            android:parentActivityName="com.example.taskapp.ParentMainScreen" />
        <activity
            android:name="com.example.taskapp.ParentMainScreen"
            android:label="@string/title_activity_parent_main_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.taskapp.RegisterScreen"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.example.taskapp.LoginScreen"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>