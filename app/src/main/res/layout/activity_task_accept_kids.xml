<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/normal"
    tools:context="com.example.taskapp.taskAcceptKids">

    <TextView
        android:id="@+id/detail_punkte"

        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/backtextsss"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/detail_deadline"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/nothingheretoseelol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/seguisb"
        android:text="@string/whatyoushoulddo"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/detail_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detail_description"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"

        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/backtextsss"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/textView38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nothingheretoseelol" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="@string/points"
        android:fontFamily="@font/seguisb"
        app:layout_constraintBottom_toBottomOf="@+id/detail_punkte"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/detail_punkte" />

    <Button
        android:id="@+id/detail_accept"
        android:layout_width="160dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="130dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/buttonhintergrund"
        android:text="@string/accept_task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="225dp"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="15dp"
        android:background="#3A378E"
        app:layout_constraintBottom_toTopOf="@+id/detail_punkte"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/screen_background_dark_transparent" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="310dp"
        android:layout_height="235dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/backforimages"
        app:layout_constraintBottom_toTopOf="@+id/detail_punkte"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/detail_deadline"

        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/backtextsss"
        app:layout_constraintBottom_toTopOf="@+id/detail_accept"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/seguisb"
        android:text="@string/deadline"
        app:layout_constraintBottom_toBottomOf="@+id/detail_deadline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/detail_deadline" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/seguisb"
        android:text="@string/whatitshouldlooklike"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_description" />

</androidx.constraintlayout.widget.ConstraintLayout>

