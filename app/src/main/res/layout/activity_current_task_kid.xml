<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taskapp.currentTaskKid"
    android:background="@drawable/normal">

    <TextView
        android:id="@+id/textView32"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/backtextsss"
        app:layout_constraintBottom_toTopOf="@+id/textView30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/currenttask_imgage"
        android:layout_width="300dp"
        android:layout_height="225dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/currenttask_handinimage"
        app:layout_constraintEnd_toEndOf="@+id/currenttask_handinbtn"
        app:layout_constraintStart_toStartOf="@+id/currenttask_handinbtn" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="310dp"
        android:layout_height="235dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/backforimages"
        app:layout_constraintBottom_toTopOf="@+id/currenttask_handinimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/currenttask_handinbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/hand_in_task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/currenttask_description"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="10dp"

        android:text="Default"
        app:layout_constraintBottom_toTopOf="@+id/textView30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/currenttask_handinimage"
        android:layout_width="176dp"
        android:layout_height="112dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/currenttask_handinbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="@string/select_image"
        android:textSize="20sp"
        android:fontFamily="@font/seguisb"
        app:layout_constraintBottom_toTopOf="@+id/currenttask_handinbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/seguisb"

        android:text="@string/whatitshouldlooklike"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/currenttask_imgage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="15dp"

        android:fontFamily="@font/seguisb"
        android:text="@string/whatyoushoulddo"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/currenttask_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="30dp"
        android:text="lol"
        app:layout_constraintBottom_toTopOf="@+id/textView31"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>